<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/probg"
    tools:context="com.example.user.moodleapp.Profile">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/back"
        android:textColor="@color/darkskyblue"
        android:onClick="back"
        android:text="B"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonborder"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/cutmypic1"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

    </LinearLayout>


    <TextView
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:text="Firstname"
        android:gravity="center"
        android:textColor="@color/darkskyblue"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:inputType="text"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_width="260dp"
        android:layout_weight="1"
        android:text="NewText2"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:inputType="text"
        android:textColor="@color/darkskyblue"
        android:textStyle="bold|italic"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:text="NewText1"
        android:gravity="center"
        android:textColor="@color/darkskyblue"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:inputType="text"
        android:id="@+id/textView1"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="courses"
        android:background="@drawable/buttonborder"
        android:textColor="@color/darkskyblue"
        android:id="@+id/course"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/grades"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonborder"
        android:textColor="@color/darkskyblue"
        android:text="Grades"
        android:id="@+id/grades"
        android:layout_above="@+id/notify"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/logout"
        android:layout_alignEnd="@+id/logout" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonborder"
        android:textColor="@color/darkskyblue"
        android:text=" View Notifications"
        android:id="@+id/notify"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonborder"
        android:textColor="@color/darkskyblue"
        android:text="files"
        android:id="@+id/files"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonborder"
        android:textColor="@color/darkskyblue"
        android:text="LOGOUT"
        android:id="@+id/logout"
        android:layout_alignTop="@+id/files"
        android:layout_alignRight="@+id/course"
        android:layout_alignEnd="@+id/course" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonborder"
        android:textColor="@color/darkskyblue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Reminders"
        android:id="@+id/button7"
        android:layout_below="@+id/textView2" />

</RelativeLayout>
