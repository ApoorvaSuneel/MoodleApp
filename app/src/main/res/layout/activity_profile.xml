<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/probg"
    tools:context="com.example.user.moodleapp.Profile">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/cutmypic1"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <TextView
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="Lastname"
        android:textSize="20dp"
        android:layout_gravity="right"
        android:inputType="text"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:id="@+id/textView"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/files"
        android:layout_alignStart="@+id/files" />

    <TextView
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:text="Firstname"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:inputType="text"
        android:id="@+id/textView6"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignEnd="@+id/textView1" />

    <TextView
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="NewText2"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:text="NewText1"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:inputType="text"
        android:id="@+id/textView1"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_centerHorizontal="true"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="courses"
                    android:background="@drawable/buttonborder"
                    android:textColor="@color/darkskyblue"
                    android:id="@+id/course"
                    android:layout_marginBottom="10dp"
                    android:layout_above="@+id/grades"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonborder"
                    android:textColor="@color/darkskyblue"
                    android:text="Grades"
                    android:id="@+id/grades"
                    android:layout_above="@+id/notify"
                    android:layout_marginBottom="10dp"
                    android:layout_alignRight="@+id/logout"
                    android:layout_alignEnd="@+id/logout" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonborder"
                    android:textColor="@color/darkskyblue"
                    android:text=" View Notifications"
                    android:id="@+id/notify"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonborder"
                    android:textColor="@color/darkskyblue"
                    android:text="View my files"
                    android:id="@+id/files"
                    android:layout_below="@+id/textView2"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonborder"
                    android:textColor="@color/darkskyblue"
                    android:text="LOGOUT"
                    android:id="@+id/logout"
                    android:layout_alignTop="@+id/files"
                    android:layout_alignRight="@+id/course"
                    android:layout_alignEnd="@+id/course" />

                <Button
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/files"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/button7" />

</RelativeLayout>
